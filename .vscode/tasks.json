{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/labelprinter.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/labelprinter.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/labelprinter.sln"
            ],
            "problemMatcher": "$msCompile"
        }, 
        {
            "label": "package-win-x64",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-NoProfile","-ExecutionPolicy","Bypass",
                "-File","${workspaceFolder}/scripts/package.ps1",
                "-Runtime","win-x64",
                "-Configuration","Release",
                "-Notes","${input:notes}"
            ],
            "problemMatcher": []
            }
        ],
        "inputs": [
            {
            "id": "notes",
            "type": "promptString",
            "description": "Changelog-Text f√ºr diese Version (leer = Wartungsupdate)",
            "default": ""
            }
        ]
}